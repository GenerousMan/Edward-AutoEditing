<!DOCTYPE html>
<html>
    <head>
        <title>Edit</title>
        <!-- 引入Element UI样式 -->
        <link rel="stylesheet" href="/tools/element-ui@2-13-2-index.css">
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/edit/video-cloth-ads/result.css">
        <link rel="icon" href="/favicon.ico" type="image/x-icon"/>
    </head>
    <body>
        <div id="app">
            <div id="header">
                <el-row>
                    <el-col id="adaptive-header" :span="16" :offset="4">
                        <img id="logo" src="/img/logo.png"/>
                        <el-menu id="header-menu" :default-active="activeIndex" mode="horizontal" @select="handleSelect">
                            <el-menu-item index="/">首页</el-menu-item>
                            <el-menu-item index="/edit">自动剪辑</el-menu-item>
                        </el-menu>
                    </el-col>
                </el-row>
            </div>
            <div id="main">
                <el-row>
                    <el-col :span="16" :offset="4">
                        <el-steps id="steps" :active="4" finish-status="success" simple>
                            <el-step title="上传素材"></el-step>
                            <el-step title="素材预处理"></el-step>
                            <el-step title="选择案例"></el-step>
                            <el-step title="自定义修改"></el-step>
                            <el-step title="生成视频"></el-step>
                        </el-steps>
                        <el-row>
                            <el-col :span="8">
                                <el-card :body-style="{ padding: '0px' }" shadow="hover">
                                    <el-image src="/img/1.jpg" fit="cover"></el-image>
                                </el-card>
                                <el-row class="btn-group">
                                    <el-button @click="rework" icon="el-icon-back" :disabled="projectId == 'default'">返回修改</el-button>
                                    <el-button @click="match" icon="el-icon-back">选择其他案例</el-button>
                                    <el-button @click="download" type="primary" icon="el-icon-download">下载视频</el-button>
                                </el-row>
                            </el-col>
                            <el-col :span="15" :offset="1">
                                <el-card class="video-card" :body-style="{ padding: '0px' }" shadow="hover">
                                    <video :src="videoPath" type="video/mp4" controls>
                                </el-card>
                            </el-col>
                        </el-row>
                    </el-col>
                </el-row>
            </div>
        </div>
    </body>
    <!-- 引入Vue库 -->
    <script src="/tools/vue@2-6-11.js"></script>
    <script src="/tools/axios@0-19-2.js"></script> 
    <!-- <script src="https://unpkg.com/axios/dist/axios.min.js"></script> -->
    <!-- 引入Element UI组件库 -->
    <script src="/tools/element-ui@2-13-2-index.js"></script>
    <!-- 引入页面脚本 -->
    <script src="/js/edit/video-cloth-ads/result.js"></script>
</html>